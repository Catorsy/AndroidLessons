<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidLessons" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_on_surface_stroke</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="GreenButtons" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:backgroundTint">@color/backTintLightGreen</item>
        <item name="android:fontFamily">@string/typeOfFont</item>
        <item name="android:textColor">@color/buttonTextGreen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GreenOperationButtons" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:backgroundTint">@color/lightYellow</item>
        <item name="android:fontFamily">@string/typeOfFont</item>
        <item name="android:textColor">@color/buttonTextGreen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GreenMainScreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@drawable/leaf_176722_640</item>
    </style>

    <style name="Screen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_height">@dimen/textVievHeight</item>
        <item name="android:background">@color/backTextLightGreen</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="DayButtons" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:backgroundTint">#80EDDF5D</item>
        <item name="android:fontFamily">@string/typeOfFont</item>
        <item name="android:textColor">@color/redBright</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NightButtons" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:backgroundTint">#805DDBE3</item>
        <item name="android:fontFamily">@string/typeOfFont</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>